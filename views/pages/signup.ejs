<div class='col-lg-7 col-md-7 col-10 mt-lg-5 mt-3 shadow-rounded-3 p-lg-5 p-3 mx-auto'>
    <h4 class='text-center text-decoration-underline'>Sign Up </h4>

    <form action="/signup" method="post">
    <input id="name" class='form-control my-3 shadow-none' type="text" name="name" required autofocus type="text" class="form-control shadow-none my-3" placeholder="name">
    <input id="email" type="email" class='form-control my-3 shadow-none' name="email" required class="form-control shadow-none my-3" placeholder="email">
    <input id="age" type="number" class='form-control my-3 shadow-none' name="age" class="form-control shadow-none my-3" placeholder="number">
    <input id="password" type="password" class='form-control my-3 shadow-none' name="password" required class="form-control shadow-none my-3" placeholder="password">
    <button type="submit" class="my-4 btn btn-danger w-100 "> submit</button>
</form>
</div>




